<div class="row row-cols-1 row-cols-md-2 g-4 pt-5">
  {{#each pokemons as |pokemon|}}
    <div class="col-2">
      <div class="card h-100">
        <div class="card-body d-flex flex-column align-items-center">
          <h5 class="card-title">{{pokemon.name}}</h5>

          {{#if pokemon.active}}
            <img
              src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/versions/generation-v/black-white/animated/{{pokemon.id}}.gif"
              class="img-fluid pt-3 pb-3"
              style="height: 100px;"
            />
            <button
              type="button"
              id="{{pokemon.id}}"
              value="disable"
              class="btn btn-secondary btn-activate-pokemon"
            >GIF OFF</button>
          {{else}}
            <img
              src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/versions/generation-v/black-white/{{pokemon.id}}.png"
              class="img-fluid"
              style="height: 100px;"
            />
            <button
              type="button"
              id="{{pokemon.id}}"
              value="activate"
              class="btn btn-warning btn-activate-pokemon"
            >GIF ON</button>
          {{/if}}
          <div class="d-flex flex-row p-2">
            <button class="heart">â™¡</button>
            <button
              type="button"
              value="{{pokemon.id}}"
              class="btn btn-danger btn-delete-pokemon"
            >Delete</button>
          </div>

        </div>
      </div>
    </div>
  {{/each}}
</div>

<script src="/js/pokemons.js"></script>